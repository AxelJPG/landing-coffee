---
interface Props {
	title: string
	description: string
}

import Footer from '@/sections/Footer.astro'
import Header from '@/sections/Header.astro'
import '@fontsource-variable/nunito'

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<!-- Metaetiquetas Open Graph -->
		<meta property="og:title" content="Café Papá Julio" />
		<meta property="og:description" content="¡Eleva tus sentidos con lo mejor de Nicaragua!" />
		<meta property="og:image" content="/images/logo.webp" />
		<meta property="og:url" content="https://landing-coffee.vercel.app/" />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Café Papá Julio" />

		<!-- Metaetiquetas Twitter Cards -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Café Papá Julio" />
		<meta name="twitter:description" content="Descripción breve de tu página" />
		<meta name="twitter:image" content="/images/logo.webp" />
	</head>
	<body class="mx-auto bg-pearl-lusta-50 text-pearl-lusta-950 lg:max-w-screen-lg">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	html {
		font-family: 'Nunito Variable', system-ui, sans-serif;
	}
</style>
